<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">3dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="SpinnerTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeMaxTextSize">18sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>